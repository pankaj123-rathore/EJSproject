<!DOCTYPE html>
<html lang="en">
<head>
  <title>Explore Products | BazaarGhar</title>
  <%- include("__bootstrap.ejs") %>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f7f9fc;
      color: #333;
    }

    .explore-hero {
      background: linear-gradient(to right, #ff5722c7, #ff9800b5), url('https://images.unsplash.com/photo-1591035897812-86bda5f11b7d') center/cover no-repeat;
      height: 400px;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      text-align: center;
      padding: 20px;
    }

    .explore-hero h1 {
      font-size: 3rem;
      font-weight: 700;
    }

    .explore-hero p {
      font-size: 1.2rem;
      margin-top: 10px;
    }

    .section-title {
      font-size: 2rem;
      font-weight: 600;
      margin: 50px 0 25px;
      text-align: center;
      color: #222;
    }

    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 20px;
      padding: 0 40px;
    }

    .category-card {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      text-align: center;
      padding: 20px;
      transition: 0.3s;
      cursor: pointer;
    }

    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }

    .category-card img {
      width: 60px;
      height: 60px;
      margin-bottom: 10px;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 25px;
      padding: 0 40px;
    }

    .product-card {
      background-color: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 12px rgba(0,0,0,0.06);
      transition: 0.3s;
    }

    .product-card:hover {
      transform: scale(1.02);
    }

    .product-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .product-body {
      padding: 15px;
      text-align: center;
    }

    .product-body h5 {
      font-size: 1rem;
      font-weight: 600;
    }

    .product-body .price {
      color: #28a745;
      font-weight: 500;
      margin: 10px 0;
    }

    .btn-buy {
      background-color: #ff5722;
      border: none;
      padding: 8px 20px;
      color: white;
      border-radius: 6px;
      text-decoration: none;
      display: inline-block;
      font-weight: 500;
    }

    .btn-buy:hover {
      background-color: #e64a19;
    }
  </style>
</head>
<body>

<%- include("__header.ejs") %>

<!-- Hero Banner -->
<section class="explore-hero">
  <div>
    <h1>Explore the Best of BazaarGhar</h1>
    <p>Discover categories, top picks, and trending deals curated for you</p>
  </div>
</section>

<!-- Categories -->
<h2 class="section-title">Shop by Category</h2>
<div class="category-grid mb-5">
  <div class="category-card">
    <img src="https://cdn-icons-png.flaticon.com/512/892/892458.png" alt="Fashion">
    <div>Fashion</div>
  </div>
  <div class="category-card">
    <img src="https://cdn-icons-png.flaticon.com/512/1041/1041372.png" alt="Electronics">
    <div>Electronics</div>
  </div>
  <div class="category-card">
    <img src="https://cdn-icons-png.flaticon.com/512/2933/2933840.png" alt="Home">
    <div>Home & Kitchen</div>
  </div>
  <div class="category-card">
    <img src="https://cdn-icons-png.flaticon.com/512/3418/3418516.png" alt="Books">
    <div>Books</div>
  </div>
  <div class="category-card">
    <img src="https://cdn-icons-png.flaticon.com/512/1995/1995489.png" alt="Beauty">
    <div>Beauty</div>
  </div>
</div>

<!-- Featured Products -->
<h2 class="section-title">Top Picks For You</h2>
<div class="product-grid mb-5">
  <% for(let product of products) { %>
    <div class="product-card">
      <img src="<%= product.thumbnail %>" alt="<%= product.title %>">
      <div class="product-body">
        <h5><%= product.title.substring(0, 28) %></h5>
        <div class="price">â‚¹ <%= product.price %></div>
        <a href="/product/<%= product.id %>" class="btn-buy">View More</a>
      </div>
    </div>
  <% } %>
</div>

<%- include("__footer.ejs") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
